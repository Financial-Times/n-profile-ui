{
	"exclude": ["node_modules", "bower_components", "dist", "demos", "test"],
	"compilerOptions": {
		"lib": ["ES2022", "dom"],
		"module": "esnext",
		"target": "ES2022",
		"sourceMap": false,
		"outDir": "./dist",
		"rootDirs": ["./src/js"],
		"strict": true,
		"removeComments": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "react",
		"noEmit": true,
		"noImplicitAny": false,
		"types": [
			"agent-base",
			"body-parser",
			"connect",
			"express",
			"express-serve-static-core",
			"jest",
			"mime",
			"minimatch",
			"node",
			"normalize-package-data",
			"range-parser",
			"semver",
			"serve-static",
			"sinon"
		]
	}
}
